                    </div>
                    <div class="card-footer">
                        <form>
                            <div class="form-group row ">
                                <div class="col-10">
                                    <input type="text" class="form-control col-lg-12 col-sm-8" placeholder="Type Your message Here...">
                                </div>
                                <div class="col">
                                    <button type="submit" class="btn btn-primary mb-2 ">Reply</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div id="OwnerContent">
            @RenderBody()
        </div>
    </div>

    <!-- Profile Modal -->
    <div class="modal fade" id="ProfileModal" tabindex="-1" role="dialog" aria-labelledby="updateProfile" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="dialog">
            <div class="modal-content">

                <!--Title-->
                <div class="modal-header">
                    <div id="TextYellowBackground" class="rounded full-width">
                        <h4 class="modal-title">Your Profile</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
                <!--First Name fields-->
                <div class="modal-body">
                    <form class="form-inline">
                        <label for="profileFirstName" class="weight-bold col-sm-3 col-form-label padding-right-xs">First Name: </label>
                        <input type="text" class="form-control" id="profileFirstName" placeholder="">
                    </form>

                    <br />
                    <!--Last Name fields-->
                    <form class="form-inline">
                        <label for="profileLastName" class="weight-bold col-sm-3 col-form-label padding-right-xs">Last Name: </label>
                        <input type="text" class="form-control" id="profileLastName" placeholder="">
                    </form>



                    <br />
                    <!--Mobile number fields-->
                    <form class="form-inline">
                        <label for="profileCellNumber" class="weight-bold col-sm-3 col-form-label padding-right-xs">Mobile Number: </label>
                        <input type="number" class="form-control" id="profileCellNumber" placeholder="">
                    </form>

                    <br />
                    <!--Email Address fields-->
                    <form class="form-inline">
                        <label for="profileEmail" class="weight-bold col-sm-3 col-form-label padding-right-xs">Email Address: </label>
                        <input type="email" class="form-control" id="profileEmail" placeholder="">
                    </form>


                    <br />

                    <!--Country of residence fields-->
                    <form class="form-inline">
                        <label for="profileCountry" class="weight-bold col-sm-3 col-form-label padding-right-xs">Country of Residence: </label>
                        <input type="email" class="form-control" id="profileCountry" placeholder="">
                    </form>
                </div>

                <!--Update Button-->
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-dismiss="modal">Update</button>
                </div>
            </div>
        </div>
    </div>

